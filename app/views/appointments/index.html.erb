<h1> Appointments </h1>
<hr />

<% if @pet.appointments.any? %>

  <ul>
    <% @pet.appointments.order(:date, :time).each do |ap| %>
      <li>
        <%= ap.pet.name %> - <%= ap.date.strftime("%B %d, %Y") %> - <%= ap.time.strftime("%I:%M%p") %> |
        <%= link_to 'Remove', pet_appointment_path(@pet, ap), method: :delete, data: {confirm: "Really remove?"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <h5>No Appointments Found</h5>
<% end %>

<hr />
<%= link_to 'Add Appointment', new_pet_appointment_path(@pet), class: 'btn light-blue darken-3' %>
<br />
<br />
<%= link_to 'All Pets', pets_path, class: 'btn light-blue darken-3'  %>
