<%= form_for [@pet, @appointment] do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, required: true  %>

  <%= f.label :date %>
  <%= f.date_field :date, required: true, placeholder: 'Date' %>

  <%= f.label :time %>
  <%= f.time_field :time, placeholder: 'Time' %>

  <%= f.label :location %>
  <%= f.text_area :location %>

  <%= f.label :notes %>
  <%= f.text_area :notes %>

  <%= f.submit nil, class: 'btn light-blue darken-3' %>
  <% end %>
  <hr />
  <br />
  <%= link_to 'All Appointments', pet_appointments_path(@pet), class: 'btn light-blue darken-3' %>
  <br />
  <br />
  <%= link_to 'Back to Pets', pets_path, class: 'btn light-blue darken-3' %>
