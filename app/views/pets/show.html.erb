<div class="center">
	<h1><%= @pet.name %></h1>

	<%= cl_image_tag(@pet.picture.path, { size:'200x200', crop: :thumb, gravity: :face}) %>

	<p>Date of Birth: <%= @pet.dob.strftime("%B %d, %Y") %></p>
	<p>Gender: <%= @pet.gender %></p>
	<p>Breed: <%= @pet.breed %></p>
	<p>Microchip: <%= @pet.microchip %></p>
	<p>Primary Vet <%= @pet.primary_vet %></p>
	<p>Spayed/Neutered? <%= @pet.fixed ? "Yes" : "No" %></p>
	<p>Notes: <%= @pet.notes %></p>

</div>

<%= link_to 'View Appointments', pet_appointments_path(@pet), class: 'btn light-blue darken-3' %>
<%= link_to 'View Medical History', pet_medicals_path(@pet), class: 'btn light-blue darken-3' %>